FoamFile
{
    version         1.4;
    format          ascii;

    root            "/export/lime/data-04/sws02hs/OpenFOAM/sws02hs-1.4.1/run/shallowWater";
    case            "bucky4_30";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
projection "X18c/9c";
projection2D XZ;
plotBoundaryDots false;

FieldsToPlot
(
    [T filledContours -0.05 1.05 0.05 "$GMTU/colours/wh-bl-gr-ye-re.cpt"]
    [T contours 0.05 1.55 0.05 "black"]
//    [T contours 0 1e3 1e3 "black,1_2:0"]
    [T contours -1.55 -0.05 0.05 "black,8_8:0"]
);

// options
plotZeroValuePolys false;
region "-180/180/-90/90";
//region "-90/90/-60/60";
boundaryMarks "a30/a30";
separateLegend true;
annotate "minMax -60 -105";
//overlay true;
